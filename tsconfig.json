{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@router/*": [
                "src/router/*"
            ]
        },
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "src/**/*.js",
        "types/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}